<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    android:orientation="vertical"
    tools:context=".InsertActivity"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarUmum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarBackgreound"
        android:fitsSystemWindows="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            >
<!--            <TextView-->
<!--                android:layout_width="160dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="List Fruit"-->
<!--                android:fontFamily="@font/lexend"-->
<!--                android:textColor="@color/text"-->
<!--                android:textSize="33dp"-->
<!--                android:textStyle="bold">-->
<!--            </TextView>-->

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:fontFamily="@font/lexend"-->
<!--                android:text="Fresh Fruit Detector"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:textSize="30dp"-->
<!--                >-->
<!--            </TextView>-->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/orange_foreground"></ImageView>
            <SearchView
                android:id="@+id/searchView"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="0dp"
                android:iconifiedByDefault="false"
                android:queryHint="Ex: Fresh,Stale,2023,..."
                android:background="@drawable/background_border_full"
                />


        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <LinearLayout
                android:id="@+id/ll_welcomeUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/lexend"
                    android:text="Hasil Prediksi:"
                    android:textColor="@color/text"
                    android:textSize="23dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcyItemBuku"
            android:layout_width="match_parent"
            android:layout_height="500dp">
        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/info_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/lexend"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:gravity="center"
            >
        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/addData"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"

            >
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_border_full_2"
                >

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/lexend"
                    android:gravity="center"
                    android:text="Coba Prediksi"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>




</LinearLayout>

